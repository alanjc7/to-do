<h1>Edit Task</h1>
<%= form_with(model: @task, url: tasks_path(@task), method: :patch) do |form| %>
  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description, :cols => 50 %>
  </p>
  <p>
    <%= form.label :complete %><br>
    <%= form.check_box :complete, checked_value: true, unchecked_value: false %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
<p><%= link_to "Back", tasks_path, class: 'button'%></p>