<h1>My to do list</h1>
<p><%= link_to "Create a task", new_task_path, class: 'button'%></p>

<table>
  <tr>
    <th>Task</th>
    <th>Complete?</th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.description %></td>
      <td><%= task.complete %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
    </tr>
  <% end %>
</table>
